<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FoxShelter</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-paw me-2"></i>
                    <span class="fw-bold">FoxShelter</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" 
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Accueil
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-fox me-1"></i>Renards
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Renard" asp-action="Index">
                                    <i class="fas fa-list me-1"></i>Tous les renards
                                </a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Renard" asp-action="Create">
                                    <i class="fas fa-plus me-1"></i>Nouveau renard
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Renard" asp-action="Urgents">
                                    <i class="fas fa-exclamation-triangle text-danger me-1"></i>Urgents
                                </a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Renard" asp-action="NouveauxArrivants">
                                    <i class="fas fa-star text-warning me-1"></i>Nouveaux arrivants
                                </a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Renard" asp-action="SuiviVeterinaire">
                                    <i class="fas fa-stethoscope text-info me-1"></i>Suivi vétérinaire
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Renard" asp-action="Statistiques">
                                    <i class="fas fa-chart-bar me-1"></i>Statistiques
                                </a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">
                                <i class="fas fa-info-circle me-1"></i>À propos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">
                                <i class="fas fa-envelope me-1"></i>Contact
                            </a>
                        </li>
                    </ul>
                    <div class="navbar-nav">
                        <div class="nav-item">
                            <span class="navbar-text">
                                <i class="fas fa-clock me-1"></i>
                                <span id="horloge"></span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container-fluid">
        <!-- Affichage des messages de notification -->
        @if (TempData["Succes"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>
                @TempData["Succes"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        @if (TempData["Erreur"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>
                @TempData["Erreur"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        @if (TempData["Avertissement"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                @TempData["Avertissement"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        @if (TempData["Info"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <i class="fas fa-info-circle me-2"></i>
                @TempData["Info"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light">
        <div class="container-fluid">
            <div class="row py-3">
                <div class="col-md-4">
                    <h6><i class="fas fa-paw me-2"></i>FoxShelter</h6>
                    <p class="small mb-0">Refuge spécialisé dans la protection et le soin des renards</p>
                    <p class="small mb-0">
                        <i class="fas fa-map-marker-alt me-1"></i>
                        123 Rue de la Forêt, 75001 Paris
                    </p>
                </div>
                <div class="col-md-4">
                    <h6>Contact</h6>
                    <p class="small mb-0">
                        <i class="fas fa-phone me-1"></i>
                        01.23.45.67.89
                    </p>
                    <p class="small mb-0">
                        <i class="fas fa-envelope me-1"></i>
                        contact@foxshelter.fr
                    </p>
                </div>
                <div class="col-md-4">
                    <h6>Horaires d'ouverture</h6>
                    <p class="small mb-0">Lun-Ven: 09h00-18h00</p>
                    <p class="small mb-0">Samedi: 10h00-16h00</p>
                    <p class="small mb-0">Dimanche: Fermé</p>
                </div>
            </div>
            <hr class="my-2">
            <div class="text-center">
                <small>&copy; @DateTime.Now.Year - FoxShelter. Tous droits réservés.</small>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Script pour l'horloge -->
    <script>
        function mettreAJourHorloge() {
            const maintenant = new Date();
            const heures = maintenant.getHours().toString().padStart(2, '0');
            const minutes = maintenant.getMinutes().toString().padStart(2, '0');
            const secondes = maintenant.getSecondes().toString().padStart(2, '0');
            document.getElementById('horloge').textContent = `${heures}:${minutes}:${secondes}`;
        }
        
        // Mettre à jour l'horloge toutes les secondes
        setInterval(mettreAJourHorloge, 1000);
        mettreAJourHorloge(); // Affichage initial
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>