@model IEnumerable<FoxShelter.Models.Entities.Renard>
@using FoxShelter.Models.Enums

@{
    ViewData["Title"] = "Gestion des Renards";
    var recherche = ViewBag.Recherche as string;
    var etatSante = ViewBag.EtatSante as EtatSante?;
    var adopte = ViewBag.Adopte as bool?;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="mb-0">
                            <i class="fas fa-paw me-2"></i>
                            Gestion des Renards
                        </h2>
                        <a asp-action="Create" class="btn btn-light">
                            <i class="fas fa-plus me-1"></i>
                            Nouveau Renard
                        </a>
                    </div>
                </div>
                
                <div class="card-body">
                    <!-- Filtres et recherche -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <form method="get" class="row g-3">
                                <div class="col-md-4">
                                    <label for="recherche" class="form-label">Rechercher</label>
                                    <input type="text" class="form-control" id="recherche" name="recherche" 
                                           value="@recherche" placeholder="Nom, espèce, description...">
                                </div>
                                <div class="col-md-3">
                                    <label for="etatSante" class="form-label">État de santé</label>
                                    @Html.DropDownList("etatSante", ViewBag.EtatsSante as SelectList, 
                                        "Tous les états", new { @class = "form-select" })
                                </div>
                                <div class="col-md-3">
                                    <label for="adopte" class="form-label">Statut adoption</label>
                                    @Html.DropDownList("adopte", ViewBag.StatutsAdoption as SelectList, 
                                        new { @class = "form-select" })
                                </div>
                                <div class="col-md-2 d-flex align-items-end">
                                    <button type="submit" class="btn btn-outline-primary me-2">
                                        <i class="fas fa-search"></i>
                                    </button>
                                    <a asp-action="Index" class="btn btn-outline-secondary">
                                        <i class="fas fa-times"></i>
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                    
                    <!-- Liens rapides -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="btn-group" role="group">
                                <a asp-action="Urgents" class="btn btn-outline-danger">
                                    <i class="fas fa-exclamation-triangle me-1"></i>
                                    Urgents
                                </a>
                                <a asp-action="NouveauxArrivants" class="btn btn-outline-info">
                                    <i class="fas fa-calendar-plus me-1"></i>
                                    Nouveaux arrivants
                                </a>
                                <a asp-action="SuiviVeterinaire" class="btn btn-outline-warning">
                                    <i class="fas fa-stethoscope me-1"></i>
                                    Suivi vétérinaire
                                </a>
                                <a asp-action="Statistiques" class="btn btn-outline-success">
                                    <i class="fas fa-chart-bar me-1"></i>
                                    Statistiques
                                </a>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Résultats -->
                    @if (Model.Any())
                    {
                        <div class="row">
                            @foreach (var renard in Model)
                            {
                                <div class="col-lg-4 col-md-6 mb-4">
                                    <div class="card h-100 @(renard.EstAdopte ? "border-success" : 
                                        (renard.NecessiteAttentionUrgente() ? "border-danger" : "border-primary"))">
                                        
                                        <!-- En-tête de la carte -->
                                        <div class="card-header @(renard.EstAdopte ? "bg-success" : 
                                            (renard.NecessiteAttentionUrgente() ? "bg-danger" : "bg-primary")) text-white">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <h5 class="mb-0">
                                                    <i class="fas fa-paw me-2"></i>
                                                    @renard.NomComplet
                                                </h5>
                                                @if (renard.EstAdopte)
                                                {
                                                    <span class="badge bg-light text-success">
                                                        <i class="fas fa-heart"></i> Adopté
                                                    </span>
                                                }
                                                else if (renard.NecessiteAttentionUrgente())
                                                {
                                                    <span class="badge bg-light text-danger">
                                                        <i class="fas fa-exclamation-triangle"></i> Urgent
                                                    </span>
                                                }
                                            </div>
                                        </div>
                                        
                                        <!-- Corps de la carte -->
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-6">
                                                    <small class="text-muted">Espèce</small>
                                                    <p class="mb-2">@renard.Espece</p>
                                                </div>
                                                <div class="col-6">
                                                    <small class="text-muted">Sexe</small>
                                                    <p class="mb-2">@renard.SexeTexte</p>
                                                </div>
                                            </div>
                                            
                                            <div class="row">
                                                <div class="col-6">
                                                    <small class="text-muted">Âge</small>
                                                    <p class="mb-2">@renard.ObtenirAgeAffichage()</p>
                                                </div>
                                                <div class="col-6">
                                                    <small class="text-muted">Poids</small>
                                                    <p class="mb-2">
                                                        @if (renard.Poids.HasValue)
                                                        {
                                                            @($"{renard.Poids:F1} kg")
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">Non renseigné</span>
                                                        }
                                                    </p>
                                                </div>
                                            </div>
                                            
                                            <div class="mb-3">
                                                <small class="text-muted">État de santé</small>
                                                <p class="mb-0">
                                                    <span class="badge @(renard.EtatSante switch
                                                    {
                                                        EtatSante.Critique => "bg-danger",
                                                        EtatSante.Malade => "bg-warning",
                                                        EtatSante.EnConvalescence => "bg-info",
                                                        EtatSante.BonneSante => "bg-success",
                                                        EtatSante.Excellent => "bg-primary",
                                                        _ => "bg-secondary"
                                                    })">
                                                        @renard.EtatSante
                                                    </span>
                                                </p>
                                            </div>
                                            
                                            <div class="mb-3">
                                                <small class="text-muted">Arrivée</small>
                                                <p class="mb-0">
                                                    @renard.DateArrivee.ToString("dd/MM/yyyy")
                                                    <small class="text-muted">
                                                        (il y a @renard.CalculerDureeSejourJours() jours)
                                                    </small>
                                                </p>
                                            </div>
                                            
                                            @if (!string.IsNullOrEmpty(renard.Description))
                                            {
                                                <div class="mb-3">
                                                    <small class="text-muted">Description</small>
                                                    <p class="mb-0 text-truncate" title="@renard.Description">
                                                        @renard.Description
                                                    </p>
                                                </div>
                                            }
                                            
                                            @if (renard.RegimeAlimentaire != null)
                                            {
                                                <div class="mb-3">
                                                    <small class="text-muted">Régime alimentaire</small>
                                                    <p class="mb-0">
                                                        <i class="fas fa-utensils me-1"></i>
                                                        @renard.RegimeAlimentaire.Nom
                                                    </p>
                                                </div>
                                            }
                                        </div>
                                        
                                        <!-- Pied de la carte -->
                                        <div class="card-footer bg-light">
                                            <div class="btn-group w-100" role="group">
                                                <a asp-action="Details" asp-route-id="@renard.Id" 
                                                   class="btn btn-outline-primary btn-sm">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@renard.Id" 
                                                   class="btn btn-outline-secondary btn-sm">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                @if (!renard.EstAdopte && renard.PeutEtreAdopte())
                                                {
                                                    <button type="button" class="btn btn-outline-success btn-sm" 
                                                            data-bs-toggle="modal" data-bs-target="#modalAdoption" 
                                                            data-renard-id="@renard.Id" data-renard-nom="@renard.Nom">
                                                        <i class="fas fa-heart"></i>
                                                    </button>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        
                        <!-- Pagination si nécessaire -->
                        @if (Model.Count() > 12)
                        {
                            <nav aria-label="Navigation des renards">
                                <ul class="pagination justify-content-center">
                                    <!-- Pagination à implémenter selon les besoins -->
                                </ul>
                            </nav>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-search fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">Aucun renard trouvé</h4>
                            <p class="text-muted">
                                @if (!string.IsNullOrEmpty(recherche) || etatSante.HasValue || adopte.HasValue)
                                {
                                    <span>Aucun renard ne correspond à vos critères de recherche.</span>
                                    <br>
                                    <a asp-action="Index" class="btn btn-outline-primary mt-2">
                                        Voir tous les renards
                                    </a>
                                }
                                else
                                {
                                    <span>Aucun renard n'est encore enregistré dans le système.</span>
                                    <br>
                                    <a asp-action="Create" class="btn btn-primary mt-2">
                                        Ajouter le premier renard
                                    </a>
                                }
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal pour marquer comme adopté -->
<div class="modal fade" id="modalAdoption" tabindex="-1" aria-labelledby="modalAdoptionLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalAdoptionLabel">
                    <i class="fas fa-heart me-2"></i>
                    Marquer comme adopté
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="formAdoption" method="post">
                <div class="modal-body">
                    <p>Êtes-vous sûr de vouloir marquer <strong id="nomRenard"></strong> comme adopté ?</p>
                    
                    <div class="mb-3">
                        <label for="dateAdoption" class="form-label">Date d'adoption</label>
                        <input type="date" class="form-control" id="dateAdoption" name="dateAdoption" 
                               value="@DateTime.Now.ToString("yyyy-MM-dd")" max="@DateTime.Now.ToString("yyyy-MM-dd")">
                    </div>
                    
                    <input type="hidden" id="renardId" name="id">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-heart me-1"></i>
                        Confirmer l'adoption
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Gestion du modal d'adoption
        document.addEventListener('DOMContentLoaded', function() {
            const modalAdoption = document.getElementById('modalAdoption');
            const formAdoption = document.getElementById('formAdoption');
            const nomRenard = document.getElementById('nomRenard');
            const renardId = document.getElementById('renardId');
            
            modalAdoption.addEventListener('show.bs.modal', function(event) {
                const button = event.relatedTarget;
                const id = button.getAttribute('data-renard-id');
                const nom = button.getAttribute('data-renard-nom');
                
                nomRenard.textContent = nom;
                renardId.value = id;
                formAdoption.action = '@Url.Action("MarquerAdopte")';
            });
        });
        
        // Auto-refresh des données toutes les 30 secondes pour les cas urgents
        setInterval(function() {
            const urgentCards = document.querySelectorAll('.border-danger');
            if (urgentCards.length > 0) {
                // Optionnel : actualiser automatiquement les données
                console.log('Vérification des cas urgents...');
            }
        }, 30000);
    </script>
}

@section Styles {
    <style>
        .card {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }
        
        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        
        .text-truncate {
            max-width: 100%;
        }
        
        .badge {
            font-size: 0.75em;
        }
        
        .btn-group .btn {
            flex: 1;
        }
        
        .card-header {
            border-bottom: none;
        }
        
        .card-footer {
            border-top: 1px solid rgba(0,0,0,0.125);
        }
    </style>
}