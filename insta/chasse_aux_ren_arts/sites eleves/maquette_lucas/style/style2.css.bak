body {
    background-image: url('fond.png'); 
    background-attachment: fixed;                
    background-size: cover;                      
    background-repeat: no-repeat;               
    background-position: center;   
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    margin: 0;
    text-align: center;
}

h2, .titre_tableau {
    color: #ea8100;
}

.sous-titre {
    color: #233445;
}

.tableau_original, .histoire_tableau_revisite, .questionnaire {
    justify-content: center;
}

.bouton_valider {
    margin-top: 5%;
}

#tableau {
    padding: 10%;
    max-width: 50%;
}

.fenetre {
    background-color: #dccbba;
    margin-left: 10%;
    margin-right: 10%;
    border-radius: 10px;
    padding: 30px;
    margin-bottom: 30px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    margin-top: 5%;
}

#resultat-quiz {
    margin-top: 5%;
}

.texte {
    color: #233445;
}

label {
    color: #233445;
}

body {
    background-color: white;
    color: black;
    transition: background-color 0.4s, color 0.4s;
}

.mode-nuit {
    background-color: #121212;
    color: #f0f0f0;
}

.mode-nuit .texte {
    color: #dccbba;
}

.mode-nuit .fenetre {
    background-color: #233445;
}

@keyframes pop {
    0% { transform: scale(1); }
    50% { transform: scale(1.1); }
    100% { transform: scale(1); }
}

#bouton-mode, #valide, #bouton-musique {
    background-color: #f0f0f0;
    color: #333;
    border: none;
    padding: 10px 20px;
    font-size: 1rem;
    font-weight: bold;
    border-radius: 25px;
    cursor: pointer;
    transition: background-color 0.4s, color 0.4s, transform 0.2s;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

#bouton-mode:hover, #valide:hover, #bouton-musique:hover {
    transform: scale(1.05);
}

.mode-nuit #bouton-mode, .mode-nuit #valide{
    background-color: #444;
    color: #f0f0f0;
}

#bouton-musique:hover {
    transform: scale(1.05);
}

.mode-nuit #bouton-musique {
    background-color: #444;
    color: #f0f0f0;
    box-shadow: 0 4px 10px rgba(255, 255, 255, 0.2);
}